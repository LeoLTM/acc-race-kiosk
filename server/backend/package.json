{
	"name": "acc-race-kiosk-cs-backend",
	"version": "0.1",
	"description": "The backend for the Assetto Corsa race kiosk control server.",
	"author": "Leonard L & Michael D",
	"repository": "LeoLTM/acc-race-kiosl",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsup",
		"start:dev": "bun --watch src/index.ts",
		"start:prod": "node dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"postinstall": "prisma generate",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:studio": "prisma studio"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"@prisma/adapter-libsql": "^7.0.1",
		"@prisma/client": "^7.0.1",
		"cors": "2.8.5",
		"dotenv": "17.2.1",
		"express": "5.1.0",
		"express-rate-limit": "8.0.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"pino": "9.9.0",
		"pino-http": "10.5.0",
		"socket.io": "^4.8.1",
		"swagger-ui-express": "5.0.1",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.2.4",
		"pino-pretty": "13.1.1",
		"prisma": "^7.0.1",
		"supertest": "7.1.4",
		"tsup": "8.5.0",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "bun@1.3.3"
}
